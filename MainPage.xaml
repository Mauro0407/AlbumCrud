<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlbumCrud.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Button
                Text="Lista de albumes"
                SemanticProperties.Hint="Navigate to the Index page"
                Clicked="OnGoToIndexClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Nuevo Album"
                SemanticProperties.Hint="Navigate to the Create page"
                Clicked="OnGoToCreateClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Detalles del album"
                SemanticProperties.Hint="Navigate to the Show page"
                Clicked="OnGoToShowClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Go to Update"
                SemanticProperties.Hint="Navigate to the Update page"
                Clicked="OnGoToUpdateClicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
