<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AlbumCrud.Views.ShowPage">

    <StackLayout Padding="20">
        <Label Text="Detalles del Álbum" FontSize="24" HorizontalOptions="Center" />

        <Label Text="{Binding Album.Name}" FontSize="18" />
        <Label Text="{Binding Album.ReleaseDate}" FontSize="18" />
        <Label Text="{Binding Album.Genre}" FontSize="18" />

        <Button Text="Eliminar" Command="{Binding DeleteCommand}" />
    </StackLayout>

</ContentPage>
